{
  "name": "@redocly/default-theme",
  "version": "0.1.0",
  "description": "Default theme for @redocly/developer-portal",
  "keywords": [
    "redocly",
    "developer portal",
    "theme"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test:unit": "jest",
    "test:unit:ci": "npm run test:ci -- ./src",
    "test:coverage": "jest --coverage",
    "test:ci": "npx jest --coverage --coverageReporters=\"text\" --coverageReporters=\"text-summary\" --silent --ci",
    "prettier-base": "prettier \"**/*.{json,js,jsx,ts,tsx,yml,yaml,html,md}\"",
    "prettier": "npm run prettier-base -- --write",
    "prettier:check": "npm run prettier-base -- --check",
    "ts:check": "tsc --noEmit --skipLibCheck",
    "prepare": "husky install"
    
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chromatic": "^6.5.4",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-styled-components": "^7.0.8",
    "ts-jest": "^27.1.4",
    "prettier": "2.6.2"
  },
  "lint-staged": {
    "**/*": "prettier --write  --ignore-unknown"
  }
}
